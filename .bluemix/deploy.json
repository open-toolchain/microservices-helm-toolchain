{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "api-key": {
            "description": {
                "$ref": "#/messages/deploy.description"
            },
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "api-key"
            }
        },
        "registry-region": {
            "description": {
                "$ref": "#/messages/deploy.registryRegionDescription"
            },
            "type": "string",
            "validator": {
                "v-type": "k8s-region",
                "params": ["api-key"]
            }
        },
        "registry-namespace": {
            "description": {
                "$ref": "#/messages/deploy.registrynsDescription"
            },
            "type": "string",
            "pattern": "^[a-z0-9][-_a-z0-9]{2,28}[a-z0-9]$",
            "validator": {
                "v-type": "k8s-registry-namespace",
                "params": ["registry-region"],
                "validate": false
            }
        },
        "staging-region": {
            "description": {
                "$ref": "#/messages/deploy.region"
            },
            "type": "string",
            "validator": {
                "v-type": "k8s-region",
                "params": ["api-key"]
            }
        },
        "staging-resource-group": {
            "description": "Staging resource group",
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "resource-group",
                "params": ["api-key"]
            }
        },  
        "staging-cluster-name": {
            "description": {
                "$ref": "#/messages/deploy.clusterNameDescription"
            },
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "k8s-cluster-name",
                "params": ["staging-region", "staging-resource-group"]
            }
        },
        "staging-cluster-namespace": {
            "description": {
                "$ref": "#/messages/deploy.namespaceStageDescription"
            },
            "type": "string",
            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
        },
        "prod-region": {
            "description": {
                "$ref": "#/messages/deploy.region"
            },
            "type": "string",
            "validator": {
                "v-type": "k8s-region",
                "params": ["api-key"]
            }
        },
        "prod-resource-group": {
            "description": "Prod resource group",
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "resource-group",
                "params": ["api-key"]
            }
        },  
        "prod-cluster-name": {
            "description": {
                "$ref": "#/messages/deploy.clusterNameDescription"
            },
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "k8s-cluster-name",
                "params": ["prod-region", "prod-resource-group"]
            }
        },
        "prod-cluster-namespace": {
            "description": {
                "$ref": "#/messages/deploy.namespaceDescription"
            },
            "type": "string",
            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
        },
        "umbrella-app-name": {
            "description": {
                "$ref": "#/messages/deploy.umbrellaAppDescription"
            },
            "type": "string",
            "pattern": "\\S",
            "maxLength": 63
        }
    },
    "required": [
        "api-key",
        "registry-region",
        "registry-namespace",
        "staging-region",
        "staging-resource-group",
        "staging-cluster-name",
        "staging-cluster-namespace",
        "prod-region",
        "prod-resource-group",
        "prod-cluster-name",
        "prod-cluster-namespace",
        "umbrella-app-name"
    ],
    "form": [{
            "type": "validator",
            "url": "/devops/setup/bm-helper/validator-v1.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.umbrellaAppName"
            },
            "key": "umbrella-app-name"
        },
        {
            "type": "password",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.apikey"
            },
            "key": "api-key"
        },
        {
            "type": "label",
            "title": ""
        },        
        {
            "type": "label",
            "title": {
                "$ref": "#/messages/build.containerRegistryTitle"
            }
        },        
        {
            "type": "table",
            "columnCount": 3,
            "widths": ["50%", "3%", "47%"],
            "items": [{
                "type": "label",
                "title": {
                    "$ref": "#/messages/deploy.containerregRegion"
                }
            }, {
                "type": "label",
                "title": ""
            }, {
                "type": "label",
                "title": {
                    "$ref": "#/messages/deploy.containerregns"
                }
            }, {
                "type": "select",
                "title": {
                    "$ref": "#/messages/deploy.imgregRegion"
                },
                "key": "registry-region"
            }, {
                "type": "label",
                "title": ""
            }, {
                "type": "select",
                "readonly": false,
                "title": {
                    "$ref": "#/messages/deploy.imgregNs"
                },
                "key": "registry-namespace"
            }]
        },
        {
            "type": "label",
            "title": ""
        },
        {
            "type": "label",
            "title": {
                "$ref": "#/messages/deploy.environmentsTitle"
            }
        },        
        {
            "type": "table",
            "columnCount": 5,
            "widths": [
                "12%",
                "22%",
                "22%",
                "22%",
                "22%"
            ],
            "items": [{
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/resourceGroup"
                    }
                },                
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/clusterName"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/clusterNamespace"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/testStage"
                    }
                },
                {
                    "type": "select",
                    "key": "staging-region"
                },
                {
                    "type": "select",
                    "key": "staging-resource-group"
                },                  
                {
                    "type": "select",
                    "key": "staging-cluster-name",
                    "readonly": false
                },
                {
                    "type": "text",
                    "key": "staging-cluster-namespace",
                    "readonly": false
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/resourceGroup"
                    }
                },                
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/clusterName"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/clusterNamespace"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/prodStage"
                    }
                },
                {
                    "type": "select",
                    "key": "prod-region"
                },
                {
                    "type": "select",
                    "key": "prod-resource-group"
                },                 
                {
                    "type": "select",
                    "key": "prod-cluster-name",
                    "readonly": false
                },
                {
                    "type": "text",
                    "key": "prod-cluster-namespace",
                    "readonly": false
                },
                {
                    "type": "label",
                    "title": ""
                }
            ]
        }, {
            "type": "table",
            "columnCount": 2,
            "widths": ["15%", "80%"],
            "items": [{
                "type": "label",
                "title": ""
            }, {
                "type": "label",
                "title": {
                    "$ref": "#/messages/deploy.clusterDescription"
                }
            }]
        }, {
            "type": "table",
            "columnCount": 2,
            "widths": ["15%", "80%"],
            "items": [{
                "type": "label",
                "title": ""
            }, {
                "type": "label",
                "title": {
                    "$ref": "#/messages/deploy.clusternsDescription"
                }
            }]
        }
    ]
}